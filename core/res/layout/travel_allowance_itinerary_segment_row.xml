<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/tv_stop_counter"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:background="@drawable/blue_oval"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="20dp"
        />

    <LinearLayout
        android:id="@+id/segment_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="72dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp">


         <TextView
             android:id="@+id/tv_location"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:fontFamily="sans-serif"
             android:text="Seattle, WA"
            android:textAppearance="@style/DefaultTitle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_from_date_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="March 23 - 2:00 PM"
                android:textAppearance="@style/DefaultSubTitle"
                android:layout_weight="1"/>

            <View
                android:id="@+id/date_separator_line"
                android:layout_width="1dp"
                android:layout_height="15dp"
                android:background="#dbe1e6"
                />

            <TextView
                android:id="@+id/tv_to_date_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="March 23 - 2:00 PM"
                android:textAppearance="@style/DefaultSubTitle"
                android:layout_weight="1"
                android:gravity="right"/>

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="24dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_border_crossing_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Crossed Border"
                android:textAppearance="@style/DefaultSubTitle"
                android:paddingRight="5dp"/>

            <TextView
                android:id="@+id/tv_border_crossing_date_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="March 23 - 2:00 PM"
                android:textAppearance="@style/DefaultSubTitle" />

        </LinearLayout>



    </LinearLayout>

   <View
       android:id="@+id/segment_separator_line"
       android:layout_width="fill_parent"
       android:layout_height="1dp"
       android:layout_below="@id/segment_location"
       android:layout_marginTop="16dp"
       android:layout_marginLeft="72dp"
       android:background="#dbe1e6" />
    

    <LinearLayout
        android:id="@+id/itinerary_separator_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/segment_location"
        android:orientation="vertical"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="16dp">

        <View
            style="@style/FatListRowDivider.Border"/>

        <View
            style="@style/FatListRowDivider"/>

        <View
            style="@style/FatListRowDivider.Border"/>
    </LinearLayout>

     
     </RelativeLayout>

</RelativeLayout>
