<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="vertical" 
    android:paddingBottom="@dimen/list_cell_padding_bottom"
    android:paddingLeft="@dimen/list_cell_padding_left"
    android:paddingRight="@dimen/list_cell_padding_right"
    android:paddingTop="@dimen/list_cell_padding_top"
    android:descendantFocusability="blocksDescendants">

    <TextView
        android:id="@+id/listitem_file_search_results_list_txtvFileName"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </TextView>
    
    <TextView
        android:id="@+id/listitem_file_search_results_list_txtvFilePath"
        android:textSize="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </TextView>

</LinearLayout>
