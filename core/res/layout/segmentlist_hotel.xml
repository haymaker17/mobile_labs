<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="wrap_content" android:background="@drawable/list_selector_gradient_background" android:paddingBottom="5dp" android:paddingLeft="5dp" android:paddingRight="5dp">
	<ImageView android:id="@+id/segmentListSegmentIconView"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_gravity="center_vertical" android:src="@drawable/itin_icon_lodging" />
	<RelativeLayout android:gravity="right" android:layout_marginRight="8dp" android:layout_height="fill_parent" android:layout_width="46dp">
        <TextView android:layout_width="wrap_content" android:id="@+id/segmentListHotelTime"
            android:textStyle="bold" android:layout_height="wrap_content"
            android:text="Check" android:textAppearance="@style/PrimaryText"></TextView>
        <TextView android:layout_width="wrap_content" android:id="@+id/segmentListHotelTimeAMPM" android:layout_height="wrap_content" android:layout_below="@+id/segmentListHotelTime" android:layout_alignRight="@+id/segmentListHotelTime" android:text="In" android:textAppearance="@style/PrimaryText" android:textStyle="bold"></TextView>
	</RelativeLayout>
	<LinearLayout android:id="@+id/segmentListSegmentRowLayout"
		android:layout_width="fill_parent" android:layout_weight="1"
		android:orientation="vertical" android:layout_height="wrap_content">

		<TextView android:layout_width="wrap_content"
			android:layout_height="fill_parent" android:id="@+id/segmentListHotelVendor"
			android:text="Hotel Vendor" android:textAppearance="@style/PrimaryText" android:textStyle="bold" android:ellipsize="end" android:lines="1" android:scrollHorizontally="true"></TextView>
		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/segmentListHotelAddress1" android:textAppearance="@style/ListCellSubHeaderText" android:text="123 Any Street"></TextView>
		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/segmentListHotelAddress2" android:textAppearance="@style/ListCellSubHeaderText" android:text="City, ST"></TextView>
		<TextView android:layout_width="wrap_content"
			android:layout_height="fill_parent" android:id="@+id/segmentListLongPress"
			android:text="@string/segmentlist_long_press_message" android:visibility="gone"  android:textAppearance="@style/LongPressMessage"></TextView>
		
	</LinearLayout>
</LinearLayout>
