<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ListStripeWhite"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_daily_allowance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_title_bar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/subheader_gradient_background">

        <include
            android:id="@+id/vg_details_header"
            layout="@layout/generic_table_row_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/vg_breakfast"
        style="@style/DefaultRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_breakfast_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/ta_breakfast"
            android:textAppearance="@style/DailyAllowanceLabel" />

            <Switch
                android:id="@+id/sv_breakfast_provided"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Switch"
                android:visibility="visible"
                 />

        </LinearLayout>


        <TextView
            android:id="@+id/tv_breakfast_provision"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="Large Text"
            android:textAppearance="@style/DailyAllowanceContent" />

        <Spinner
            android:id="@+id/sp_breakfast_provided"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:background="#f4a900"
             />

    </LinearLayout>

    <View
        android:id="@+id/v_divider_breakfast"
        style="@style/ListRowDivider"
        android:layout_width="wrap_content" />

    <LinearLayout
        android:id="@+id/vg_lunch"
        style="@style/DefaultRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_lunch_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/ta_lunch"
            android:textAppearance="@style/DailyAllowanceLabel" />

        <TextView
            android:id="@+id/tv_lunch_provision"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="Large Text"
            android:textAppearance="@style/DailyAllowanceContent" />
    </LinearLayout>

    <View
        android:id="@+id/v_divider_lunch"
        style="@style/ListRowDivider"
        android:layout_width="wrap_content" />

    <LinearLayout
        android:id="@+id/vg_dinner"
        style="@style/DefaultRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_dinner_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/ta_dinner"
            android:textAppearance="@style/DailyAllowanceLabel" />

        <TextView
            android:id="@+id/tv_dinner_provision"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="Large Text"
            android:textAppearance="@style/DailyAllowanceContent" />
    </LinearLayout>

    <View
        android:id="@+id/v_divider_dinner"
        style="@style/ListRowDivider"
        android:layout_width="wrap_content" />

    <LinearLayout
        android:id="@+id/vg_lodging"
        style="@style/DefaultRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_lodging_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/ta_lodging"
            android:textAppearance="@style/DailyAllowanceLabel" />

        <TextView
            android:id="@+id/tv_lodging_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="Large Text"
            android:textAppearance="@style/DailyAllowanceContent" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/vg_overnight"
        style="@style/DefaultRow"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tv_overnight_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/ta_overnight"
            android:textAppearance="@style/DailyAllowanceLabel" />

        <TextView
        android:id="@+id/tv_overnight_help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_overnight_label"
        android:textAppearance="@style/DailyAllowanceContent" />

    </RelativeLayout>

</LinearLayout>
