<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:orientation="horizontal"
  android:padding="@dimen/list_cell_padding"
  android:background="@drawable/list_selector_gradient_background"
>
	<!-- Thumbnail Image View -->
    <ImageView
    	android:id="@+id/receipt_thumbnail"
    	android:layout_gravity="center"
    	android:layout_width="90dp"
	    android:layout_height="90dp"
	    android:minHeight="90dp"
	    android:maxHeight="90dp"
	    android:minWidth="90dp"
	    android:maxWidth="90dp"
	    android:scaleType="fitXY"
    />
    <LinearLayout
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:orientation="vertical"
    	android:layout_marginLeft="10dp"
    >
        <TextView
    		android:text="@string/general_status"
    		android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:layout_marginBottom="0sp"
    		android:textSize="14sp"
    		android:textColor="@color/ReceiptAttributeTitle"
    	/>
    	<TextView
    		android:id="@+id/share_status"
    		android:text=""
    		android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:textAppearance="@style/ReceiptAttributeValueBig"
    		android:layout_marginBottom="10sp"
    		android:layout_marginTop="0sp"
    		android:paddingTop="0sp"
    	/>
    	<TextView
    	    android:id="@+id/receipt_document_type_title"
    		android:text="@string/receipt_document_type"
    		android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:layout_marginBottom="0sp"
    		android:textSize="12sp"
    		android:textColor="@color/ReceiptAttributeTitle"
    	/>
    	<TextView
    		android:id="@+id/receipt_document_type"
    		android:text=""
    		android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:textAppearance="@style/ReceiptAttributeValueMedium"
    		android:layout_marginBottom="6sp"
    		android:layout_marginTop="0sp"
    	/>
    	<ProgressBar
    	    android:id="@+id/progress_bar"
    	    android:layout_width="fill_parent"
    	    android:layout_height="wrap_content"
    	    android:layout_marginBottom="6sp"
    	    android:layout_marginTop="0sp"
    	    android:layout_marginRight="6sp"
    	    style="?android:attr/progressBarStyleHorizontal"
    	    android:minHeight="8dip"
    	    android:maxHeight="8dip"
    	    android:visibility="gone"
    	/>
    </LinearLayout>
</LinearLayout>