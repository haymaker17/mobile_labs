<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/footer_height"
    android:layout_gravity="bottom"
    android:layout_weight="0"
    android:background="@drawable/gradient_title_bar"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="2dp"
    android:paddingTop="4dp" >

    <Button
        android:id="@+id/reject_button"
        android:layout_width="0dp"
        android:layout_height="@dimen/standard_button_height"
        android:layout_marginLeft="@dimen/footer_button_horizontal_margin"
        android:layout_marginRight="25dp"
        android:layout_weight="1.0"
        android:background="@drawable/btn_standard"
        android:text="@string/send_back"
        android:textSize="14sp" />

    <Button
        android:id="@+id/approve_button"
        android:layout_width="0dp"
        android:layout_height="@dimen/standard_button_height"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="@dimen/footer_button_horizontal_margin"
        android:layout_weight="1.0"
        android:background="@drawable/btn_standard"
        android:text="@string/approve"
        android:textSize="14sp" />

</LinearLayout>