<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:orientation="horizontal"
  android:paddingLeft="@dimen/list_cell_padding_left"
  android:paddingRight="@dimen/list_cell_padding_right"
  android:paddingTop="@dimen/list_cell_padding_top"
  android:paddingBottom="@dimen/list_cell_padding_bottom"
  android:background="@drawable/list_selector_gradient_background"
>
	<CheckBox
    	android:id="@+id/attendee_check"
    	android:layout_height="wrap_content"
    	android:focusable="false"
    	android:focusableInTouchMode="false"
    	android:layout_width="wrap_content"
    	android:layout_gravity="center"
    />
    <LinearLayout
    	android:layout_height="wrap_content"
    	android:orientation="vertical"
    	android:layout_width="fill_parent"
    	android:layout_gravity="top"
    	android:layout_weight="1.0"
    	android:paddingLeft="@dimen/list_cell_padding_left"
    >
        <TextView
        	android:id="@+id/attendee_name"
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:textAppearance="@style/ListCellHeaderText"
        	android:layout_gravity="top|left"
        	android:gravity="top|left"
    		android:lines="1"
	    	android:scrollHorizontally="true"
	    	android:ellipsize="end"
        />
	    <TextView
	    	android:id="@+id/attendee_field_1"
	    	android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:textAppearance="@style/ListCellSubHeaderText"
	    	android:layout_gravity="top|left"
	    	android:gravity="top|left"
	    	android:lines="1"
	    	android:scrollHorizontally="true"
	    	android:ellipsize="end"
	    	android:layout_marginTop="@dimen/list_cell_secondary_text_top_margin"
	    />
        <TextView
        	android:id="@+id/attendee_field_2"
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:textAppearance="@style/ListCellSubHeaderText"
        	android:layout_gravity="top|left"
        	android:gravity="top|left"
        	android:lines="1"
	    	android:scrollHorizontally="true"
	    	android:ellipsize="end"
	    	android:layout_marginTop="@dimen/list_cell_secondary_text_top_margin"
        />
        <TextView
        	android:id="@+id/attendee_field_3"
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:textAppearance="@style/ListCellSubHeaderText"
        	android:layout_gravity="top|left"
        	android:gravity="top|left"
        	android:lines="1"
	    	android:scrollHorizontally="true"
	    	android:ellipsize="end"
	    	android:layout_marginTop="@dimen/list_cell_secondary_text_top_margin"
	    	android:visibility="gone"
        />
    </LinearLayout>
</LinearLayout>
