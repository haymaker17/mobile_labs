<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_selector_gradient_background"
    android:orientation="horizontal"
    android:padding="5dp" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:orientation="vertical" >

        <!-- Vendor Image View -->

        <ImageView
            android:id="@+id/hotelResultVendorImage"
            android:layout_width="84dp"
            android:layout_height="16dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp" />
        <!-- Hotel Chain Name, if no hotel chain image. -->

        <TextView
            android:id="@+id/hotelResultChainName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAppearance="@style/PrimaryText"
            android:visibility="gone" />
        <!-- Star Rating -->

        <ImageView
            android:id="@+id/star_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:src="@drawable/stars_1" />
        <!-- Cheapest Rooom -->

        <TextView
            android:id="@+id/hotelResultCheapestRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:textAppearance="@style/HotelListRowPriceText" />

        <TextView
            android:id="@+id/travel_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Earn 25 pts"
            android:textAppearance="@style/TravelPointsAtItemLevel"
            android:visibility="gone" />
        <!-- Distance -->

        <TextView
            android:id="@+id/hotelResultDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:textAppearance="@style/SmallPrimaryText" />
        <!-- Preferred Text/Ranking -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/pref_rank_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAppearance="@style/SmallPrimaryText" />

            <ImageView
                android:id="@+id/hotelResultPreferredRank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_weight="0.7"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/hotelResultHotelName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top|left"
            android:maxLines="2"
            android:textAppearance="@style/HotelListRowHeaderText" />

        <TextView
            android:id="@+id/hotelAddr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:textAppearance="@style/HotelListRowAddressText" />

        <TextView
            android:id="@+id/hotelPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:textAppearance="@style/PrimaryText"
            android:textColor="#0000FF" />
        <!-- Recommendations Text/Image -->

        <include layout="@layout/travel_hotel_recommendation" />
    </LinearLayout>

</LinearLayout>