<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:isScrollContainer="true" >

    <ScrollView
        style="@style/ConcurTheme"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_background"
        android:fillViewport="true"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/expenseit_details_relative_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/expenseit_details_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/expenseit_analyzing_note"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingBottom="@dimen/expenseit_note_padding"
                    android:paddingTop="@dimen/expenseit_note_padding"
                    android:text="@string/expenseit_analyzing_note"
                    android:textColor="@color/listItemMainText"
                    android:textSize="12sp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/list_item_horizontal_margin"
                    android:layout_marginRight="@dimen/list_item_horizontal_margin"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/view_expenseit_receipt"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/square_border"
                        android:clickable="true"
                        android:orientation="vertical"
                        android:padding="1dp">

                        <LinearLayout
                            android:id="@+id/header_expenseit_receipt"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/list_selector_gradient_background"
                            android:clickable="true"
                            android:focusable="true"
                            android:onClick="onClick"
                            android:orientation="horizontal"
                            android:paddingBottom="@dimen/list_cell_padding_bottom"
                            android:paddingLeft="@dimen/list_cell_padding_left"
                            android:paddingRight="@dimen/list_cell_padding_right"
                            android:paddingTop="@dimen/list_cell_padding_top">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/exp_list_header_row_icon_margin"
                                android:layout_marginRight="@dimen/exp_list_header_row_icon_margin"
                                android:src="@drawable/icon_receipt_button"/>

                            <TextView
                                android:id="@+id/view_receipts"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/exp_list_header_row_title_left_margin"
                                android:text="@string/view_receipt"
                                android:textAppearance="@style/ListCellHeaderText"/>
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="3dp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:background="@drawable/square_border_shadow"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/list_group_vertical_margin"
                    android:layout_marginLeft="@dimen/list_item_horizontal_margin"
                    android:layout_marginRight="@dimen/list_item_horizontal_margin"
                    android:layout_marginTop="@dimen/list_group_vertical_margin"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/header_list"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/square_border"
                        android:orientation="vertical"
                        android:padding="1dp">

                        <LinearLayout
                            android:id="@+id/expenseit_header_fields"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <include
                                android:id="@+id/expenseit_capture_date"
                                layout="@layout/static_text_form_field"/>

                            <include layout="@layout/group_separator"/>

                            <include
                                android:id="@+id/expenseit_details_processing_time"
                                layout="@layout/static_text_form_field"/>

                            <include layout="@layout/group_separator"/>

                            <include
                                android:id="@+id/expenseit_comment"
                                layout="@layout/image_form_field"/>

                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="3dp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:background="@drawable/square_border_shadow"/>

                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/expenseit_logo_relative_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true" >

                <ImageView
                    android:id="@+id/ocr_expenseit_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ocr_expenseit_logo"/>

                <TextView
                    android:id="@+id/expenseit_powered_by"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ocr_expenseit_logo"
                    android:gravity="center_vertical"
                    android:paddingBottom="@dimen/expenseit_icon_padding_bottom"
                    android:paddingTop="@dimen/expenseit_icon_padding_top"
                    android:text="@string/expenseit_powered_by"
                    android:textColor="@color/expenseit_gray"
                    android:textSize="12sp"/>

            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>