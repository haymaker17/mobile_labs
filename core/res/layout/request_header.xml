<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_height="match_parent"
	android:layout_width="match_parent"
	android:minWidth="300dp"
	android:minHeight="420dp"
	android:background="#FFFFFFFF"
	android:id="@+id/formFieldsLayout"
>

    
		<RelativeLayout 
		    android:layout_width="match_parent"
		    android:layout_height="70dp"
		    android:orientation="horizontal"
		    android:id="@+id/requestHeader" 
		    android:background="#0078c8"
		    >
				
			<TextView 
		        android:id="@+id/requestHeaderName"
		        style="@style/FormFieldLabelText"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_centerVertical="true"
		        android:layout_alignParentLeft="true"
		        android:layout_marginBottom="5dp"
		        android:layout_marginLeft="15dp"
		        android:textSize="18sp"
		        android:textColor="@color/White"
		        android:textAppearance="@style/ListCellHeaderText"
		        />
	    
	    </RelativeLayout>
	    
		<ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
			
		    <LinearLayout 
		          android:id="@+id/requestHeaderFields"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">
                  <!-- Content here -->
            </LinearLayout>
            
      </ScrollView>
    
    
</LinearLayout>
