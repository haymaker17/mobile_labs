<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/expenseit_custom_comment_layout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="@dimen/custom_dialog_message_margin"
              android:orientation="vertical">


    <EditText android:id="@+id/expenseit_text_comment_edit_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextView android:id="@+id/expenseit_char_count_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="@string/expenseit_char_limit"/>

</LinearLayout>