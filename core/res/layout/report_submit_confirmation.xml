<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical"
>

	<ScrollView
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:paddingBottom="8dp" >

		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
		>
			<TextView
				android:id="@+id/missing_receipt_title"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:text="@string/report_submit_dialog_message"
				android:textAppearance="@style/CustomDialogMessageText"
				android:layout_margin="@dimen/custom_dialog_message_margin"
				android:layout_gravity="center"
			/>
			<TextView
				android:id="@+id/missing_receipt_reminder"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:maxLines="1"
				android:minLines="1"
				android:text="@string/no_missing_receipt_reminder"
				android:textAppearance="@style/CustomDialogMessageSubheaderText"
				android:gravity="center"
				android:layout_marginLeft="6dp"
			/>
		</LinearLayout>
	</ScrollView>
</LinearLayout>
