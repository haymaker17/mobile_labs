<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
    android:id="@+id/row">

    <View
        android:id="@+id/v_divider_top"
        style="@style/TAListRowDivider"
        android:layout_width="wrap_content"
        android:visibility="gone"/>
    

    <RelativeLayout
        android:id="@+id/list_field_container"
        style="@style/TARow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v_divider_top"
        android:paddingLeft="0dp">

        <View
            android:id="@+id/v_checkbox_space"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="Large Text"
            android:textAppearance="@style/TATitle"
            android:lines="1"
            android:ellipsize="end"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/v_checkbox_space"
            />

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/tv_title"
            android:layout_marginLeft="8dp"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="Large Text"
            android:textAppearance="@style/TAValue"/>

        <TextView
            android:id="@+id/tv_subtitle_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="Small Text"
            android:textAppearance="@style/TASubTitle"
            android:layout_below="@+id/tv_title"
            android:layout_alignLeft="@id/tv_title"/>

        <TextView
            android:id="@+id/tv_subtitle_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_subtitle_1"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="Small Text"
            android:textAppearance="@style/TASubTitle"
            android:layout_alignLeft="@id/tv_title"/>

        <LinearLayout
            android:id="@+id/vg_subtitle_ellipsized"
            android:visibility="gone"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_subtitle_2"
            android:layout_alignLeft="@id/tv_title">

        <TextView
            android:id="@+id/tv_subtitle_ellipsized"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_alignParentLeft="true"
            android:ellipsize="end"
            android:text="Small Text"
            android:layout_weight="0.4"
            android:textAppearance="@style/TASubTitle"/>

        <TextView
            android:id="@+id/tv_subtitle_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_weight="0.6"
            android:textAppearance="@style/TASubTitleMoreLabel"
            android:text="@string/general_more_information"
            android:layout_marginLeft="5dp" />
        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@+id/v_divider_bottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#a7b6bf"
        android:visibility="gone"
        android:layout_below="@+id/list_field_container"/>

    <!--<include-->
        <!--android:layout_width="wrap_content"-->
        <!--android:id="@+id/v_divider_bottom"-->
        <!--android:layout_height="wrap_content"-->
        <!--layout="@layout/generic_divider_bold"-->
        <!--android:visibility="gone"-->
        <!--android:layout_below="@+id/list_field_container" />-->

</RelativeLayout>
