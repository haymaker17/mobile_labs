<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ConcurTheme"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/ListScreenBackground"
    android:orientation="vertical" >

    <!-- Include the standard header bits -->

    <include
        android:id="@+id/header"
        layout="@layout/standard_header" />

    <include
        android:id="@+id/hotel_search_results_criteria"
        layout="@layout/travel_title_header" />

    <include
        android:id="@+id/travel_points_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/travel_header"
        layout="@layout/travel_points_header_in_segment_search"
        android:visibility="gone" />

    <ListView
        android:id="@android:id/list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="@color/WhiteBackground"
        android:divider="@color/ListBackground"
        android:dividerHeight="2dp" />

    <include
        android:id="@+id/footer"
        layout="@layout/footer_navigation_bar_text_view" />

</LinearLayout>