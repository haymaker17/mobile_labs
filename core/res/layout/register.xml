<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ConcurTheme"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/gradient_background"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/header_height" >

        <TextView
            style="@style/NewHeaderText"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/gradient_title_bar"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:text="@string/register_title" />

        <TextView
            android:id="@+id/registerTip"
            android:layout_width="@dimen/header_cell_width"
            android:layout_height="fill_parent"
            android:layout_gravity="right"
            android:clickable="true"
            android:gravity="center"
            android:text="\?"
            android:textAppearance="@style/NewHeaderText" />

        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/header_cell_width"
            android:background="@color/White" >
        </View>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/loginControls"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="18sp"
        android:paddingTop="18sp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:layout_marginLeft="15sp"
            android:layout_marginRight="15sp"
            android:gravity="center"
            android:text="@string/register_web_login"
            android:textAppearance="@style/PrimaryText" >
        </TextView>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/square_border"
            android:orientation="vertical"
            android:padding="1dp" >

            <EditText
                android:id="@+id/registerId"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/square_no_border"
                android:hint="@string/login_id_hint"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:textAppearance="@style/PrimaryText" >
            </EditText>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/SquareBoxBorder" />

            <EditText
                android:id="@+id/registerPassword"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/square_no_border"
                android:hint="@string/login_password_hint"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textAppearance="@style/PrimaryText" >
            </EditText>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="3dp"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="9dp"
            android:background="@drawable/square_border_shadow" />

        <Button
            android:id="@+id/loginButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:layout_marginTop="10dp"
            style="@style/StandardButton" 
            android:text="@string/login_button" >
        </Button>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pinControls"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="18sp"
        android:paddingTop="18sp" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:layout_marginLeft="15sp"
            android:layout_marginRight="15sp"
            android:gravity="center"
            android:text="@string/register_pin_entry"
            android:textAppearance="@style/PrimaryText" >
        </TextView>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/square_border"
            android:orientation="vertical"
            android:padding="1dp" >

            <EditText
                android:id="@+id/registerPin"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/square_no_border"
                android:hint="@string/login_pin_hint"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textAppearance="@style/PrimaryText" >
            </EditText>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/SquareBoxBorder" />

            <EditText
                android:id="@+id/registerPinConfirm"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/square_no_border"
                android:hint="@string/login_pin_confirm_hint"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textAppearance="@style/PrimaryText" >
            </EditText>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="3dp"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="9dp"
            android:background="@drawable/square_border_shadow" />

        <Button
            android:id="@+id/submitButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:layout_marginTop="10dp"
            style="@style/StandardButton" 
            android:text="@string/submit_button" >
        </Button>
    </LinearLayout>

</LinearLayout>