<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/White"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:paddingBottom="@dimen/form_cell_padding_bottom"
    android:paddingLeft="@dimen/form_cell_padding_left"
    android:paddingTop="@dimen/form_cell_padding_top" >

    <TextView
        android:id="@+id/field_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/list_cell_primary_text_bottom_margin"
        android:text="TextView"
        android:textColor="@color/expenseFieldLabelText"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/field_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/field_name"
        android:fontFamily="sans-serif-light"
        android:text="TextView"
        android:textColor="@color/expenseFieldValueText" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/field_value"
        android:layout_below="@id/field_value"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/time_icon"
            android:layout_width="12dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:src="@drawable/icon_card" />

        <TextView
            android:id="@+id/time_value"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="TextView"
            android:textColor="@color/gray"
            android:textSize="10sp" />
    </LinearLayout>

</RelativeLayout>