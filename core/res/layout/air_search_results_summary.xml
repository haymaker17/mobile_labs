<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ConcurTheme"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/gradient_background" >

    <!-- Include the standard header bits -->

    <include
        android:id="@+id/header"
        layout="@layout/standard_header" />

    <include
        android:id="@+id/travel_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        layout="@layout/travel_title_header" />

    <include
        android:id="@+id/travel_points_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/travel_header"
        layout="@layout/travel_points_header_in_segment_search"
        android:visibility="gone" />

    <ListView
        android:id="@+id/list_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/travel_points_header"
        android:background="@drawable/gradient_background"
        android:divider="@color/ListDivider" >
    </ListView>

</RelativeLayout>