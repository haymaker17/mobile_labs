<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:paddingTop="@dimen/list_cell_padding_top"
  	android:paddingBottom="@dimen/list_cell_padding_bottom"
  	android:paddingLeft="@dimen/list_cell_padding_left"
	android:paddingRight="@dimen/list_cell_padding_right"
  	android:background="@drawable/list_selector_gradient_background"
>
	<TextView
		android:id="@+id/exp_entries_attendee_row_name"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="@style/FormFieldValueText"
		android:paddingLeft="@dimen/list_cell_padding_left"
		android:layout_toLeftOf="@+id/exp_entries_attendee_row_amount"
		android:layout_alignParentLeft="true"
	 	android:ellipsize="end"
		android:maxLines="1"
		android:scrollHorizontally="true"
		android:singleLine="true"
	/>
	<TextView
		android:id="@+id/exp_entries_attendee_row_amount"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:textAppearance="@style/FormFieldValueText"
		android:paddingRight="@dimen/list_cell_padding_right"
		android:lines="1"
	 	android:scrollHorizontally="true"
	 	android:ellipsize="end"
	/>
	<TextView
		android:id="@+id/exp_entries_attendee_row_company_type"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_alignLeft="@id/exp_entries_attendee_row_name"
		android:layout_below="@id/exp_entries_attendee_row_name"
		android:textAppearance="@style/FormFieldLabelText"
		android:paddingRight="@dimen/list_cell_padding_right"
		android:paddingLeft="@dimen/list_cell_padding_left"
		android:lines="1"
	 	android:scrollHorizontally="true"
	 	android:ellipsize="end"
	/>
	<TextView
		android:id="@+id/exp_entries_attendee_row_count"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_below="@id/exp_entries_attendee_row_name"
		android:textAppearance="@style/FormFieldLabelText"
		android:paddingRight="@dimen/list_cell_padding_right"
		android:lines="1"
	 	android:scrollHorizontally="true"
	 	android:ellipsize="end"
	/>
</RelativeLayout>
