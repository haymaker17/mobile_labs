<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:id="@+id/fixed_ta_detail_row">

    <RelativeLayout
        style="@style/TARow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textAppearance="@style/TALabel" />

        <Switch
            android:id="@+id/sv_switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            style="@style/TADailyAllowanceSwitch"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_read_only_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tv_label"
            android:text="Large Text"
            android:textAppearance="@style/TAValue.Small" />

        <Spinner
            android:id="@+id/sp_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_read_only_value"
            android:visibility="visible" />

    </RelativeLayout>

    <View
        android:id="@+id/v_divider"
        style="@style/TAListRowDivider"
        android:layout_width="wrap_content" />

</LinearLayout>