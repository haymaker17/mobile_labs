<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rowContainer">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_margin="0dp"
        android:id="@+id/requestRow"
        android:layout_gravity="start">

        <LinearLayout
            android:id="@+id/rowNameLayout"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            >

            <TextView
                android:id="@+id/requestRowName"
                style="@style/RequestListItemMainText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/requestRowId"
                style="@style/FormFieldLabelText"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/requestRowAmount"
            style="@style/RequestListItemAmountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignBaseline="@id/rowNameLayout"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            />

        <TextView
            android:id="@+id/requestStartDate"
            style="@style/RequestListItemDetailText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/rowNameLayout"
            android:layout_below="@id/rowNameLayout"
            />

        <TextView
            android:id="@+id/requestStatus"
            style="@style/RequestListItemDetailText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignBaseline="@id/requestStartDate"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            />

        <ImageView
            android:id="@+id/requestRowExceptionIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="0dp"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            />

    </RelativeLayout>
</RelativeLayout>
