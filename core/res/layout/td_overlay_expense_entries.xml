<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/status_bar_height"
    android:background="#AF000000" >
	
	<!-- This frame keeps the height of the ActionBar in each orientation, so we align the X button here -->
	<FrameLayout android:layout_width="@dimen/td_dummy_action_bar_height"
			android:layout_height="@dimen/td_dummy_action_bar_height"
			android:layout_alignParentRight="true"
			android:layout_alignParentTop="true"
			android:id="@+id/td_icon_cancel_button"
			android:background="#00000000" >

		<ImageView
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="right|center_vertical"
		    android:src="@drawable/td_icon_cancel"
		    android:layout_marginRight="14dp" />
	</FrameLayout>
	
	<!-- Add an expense -->
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
		android:layout_gravity="right"
		android:gravity="right"
	    android:layout_marginTop="@dimen/td_dummy_ab_icon_arrow_margin" >
	
	    <LinearLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
			android:layout_gravity="right"
	        android:layout_marginRight="@dimen/td_dummy_ab_add_icon_center_width" >
	        
		    <ImageView
		        android:src="@drawable/td_arrow_up"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" />
		    
		    <View
			    android:layout_width="@dimen/td_arrow_width"
			    android:layout_height="@dimen/td_arrow_length_from_ab"
			    android:background="@android:color/white" 
			    android:layout_gravity="center"/>
	    </LinearLayout>
	    
	    <TextView
	        android:layout_width="72dp"
	        android:layout_height="wrap_content"
	        android:layout_gravity="right"
	        android:layout_marginRight="64dp"
	        android:textAppearance="@style/TestDriveOverlayText"
	        android:text="@string/td_overlay_add_an_expense" />
	

	    <!-- Submit the report -->
		<LinearLayout
		    android:layout_width="wrap_content"
		    android:layout_height="0dp"
		    android:orientation="vertical"			    
		    android:gravity="bottom|right"
			android:layout_weight="1.0"
		    android:layout_marginBottom="@dimen/td_bottom_button_height" >
			    
	 	    <TextView
		        android:layout_width = "wrap_content"
		        android:layout_height = "wrap_content"
		        android:layout_marginRight="@dimen/td_bottom_button_center"
		        android:textAppearance="@style/TestDriveOverlayText"
		        android:text="@string/td_overlay_submit_report" />
		        
		    <LinearLayout
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:orientation="vertical"
		        android:layout_gravity="right"
		        android:gravity="right"
		        android:layout_marginRight="@dimen/td_bottom_button_center" >
			    
			    <View
				    android:layout_width="@dimen/td_arrow_width"
				    android:layout_height="@dimen/td_arrow_length_from_ab"
				    android:background="@android:color/white" 
				    android:layout_gravity="center"/>
			    
			    <ImageView
			        android:src="@drawable/td_arrow_down"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content" />
	    	</LinearLayout>
		</LinearLayout>
	</LinearLayout>
	
</RelativeLayout>
