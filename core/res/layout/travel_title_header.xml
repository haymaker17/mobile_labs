<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/subheader_gradient_background"
    android:orientation="vertical"
    android:paddingBottom="@dimen/report_list_cell_padding_bottom"
    android:paddingLeft="@dimen/list_item_horizontal_margin"
    android:paddingRight="@dimen/list_item_horizontal_margin"
    android:paddingTop="@dimen/report_list_cell_padding_top" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_weight="1.0"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/travel_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top|left"
                android:ellipsize="end"
                android:gravity="top|left"
                android:lines="1"
                android:scrollHorizontally="true"
                android:textAppearance="@style/ListCellHeaderText" />

            <TextView
                android:id="@+id/date_span"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top|left"
                android:layout_marginTop="@dimen/report_list_cell_secondary_text_top_margin"
                android:ellipsize="end"
                android:gravity="top|left"
                android:lines="1"
                android:scrollHorizontally="true"
                android:textAppearance="@style/SubHeaderText" />
            <!-- show agency record locator for travel agency assistance -->

            <TextView
                android:id="@+id/trip_record_locator"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top|left"
                android:layout_marginTop="@dimen/report_list_cell_secondary_text_top_margin"
                android:ellipsize="end"
                android:gravity="top|left"
                android:lines="1"
                android:scrollHorizontally="true"
                android:textAppearance="@style/SubHeaderText"
                android:visibility="gone" />

            <!-- total travel points booked -->

            <TextView
                android:id="@+id/trip_total_travel_points_booked"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top|left"
                android:layout_marginTop="@dimen/report_list_cell_secondary_text_top_margin"
                android:ellipsize="end"
                android:gravity="top|left"
                android:lines="1"
                android:scrollHorizontally="true"
                android:textAppearance="@style/SubHeaderText"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>