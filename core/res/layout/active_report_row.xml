<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_selector_gradient_background"
    android:paddingBottom="@dimen/list_cell_padding_bottom"
    android:paddingLeft="@dimen/list_cell_padding_left"
    android:paddingRight="@dimen/list_cell_padding_right"
    android:paddingTop="@dimen/list_cell_padding_top" >

    <RelativeLayout
        android:id="@+id/table_name_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/list_cell_primary_text_bottom_margin" >

        <TextView
            android:id="@+id/exp_app_row_report_amount"
            android:layout_height="wrap_content"
			android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/list_cell_icon_margin_right"
            android:text="$3,789,234,598,234.56"
            android:textAppearance="@style/ListCellHeaderText" />
        
        <TextView
            android:id="@+id/exp_app_row_report_name"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_toLeftOf="@id/exp_app_row_report_amount"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Trip To Disneyland Via The Auto Train"
            android:textAppearance="@style/ListCellHeaderText" />
    </RelativeLayout>

    <TableLayout
        android:id="@+id/table_date_icons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignWithParentIfMissing="true"
        android:layout_below="@+id/table_name_amount"
        android:layout_marginTop="@dimen/list_cell_secondary_text_top_margin"
        android:orientation="horizontal"
        android:shrinkColumns="0"
        android:stretchColumns="1" >

        <TableRow android:id="@+id/table_row_date_icons" >

            <LinearLayout
                android:layout_gravity="left"
                android:layout_marginTop="0dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/exp_app_row_report_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:scrollHorizontally="true"
                    android:text="Mar 31, 10"
                    android:textAppearance="@style/ListCellSubHeaderText" />

                <TextView
                    android:id="@+id/approver_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/list_cell_secondary_text_top_margin"
                    android:ellipsize="end"
                    android:lines="1"
                    android:scrollHorizontally="true"
                    android:textAppearance="@style/ListCellSubHeaderText" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/icon_portion"
                android:layout_gravity="right"
                android:layout_marginTop="0dp"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/exp_app_row_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/list_cell_sub_header_icon_top_margin"
                    android:src="@drawable/icon_comment" />

                <ImageView
                    android:id="@+id/exp_app_row_receipt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/list_cell_icon_margin_right"
                    android:layout_marginTop="@dimen/list_cell_sub_header_icon_top_margin"
                    android:src="@drawable/icon_receipt" />

                <ImageView
                    android:id="@+id/exp_app_row_exception"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/list_cell_icon_margin_right"
                    android:layout_marginTop="@dimen/list_cell_sub_header_icon_top_margin"
                    android:src="@drawable/icon_yellowex" />

                <ImageView
                    android:id="@+id/exp_app_row_readytosubmit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/list_cell_icon_margin_right"
                    android:layout_marginTop="@dimen/list_cell_sub_header_icon_top_margin"
                    android:src="@drawable/icon_ready_submit"
                    android:visibility="gone" />
            </LinearLayout>
        </TableRow>
    </TableLayout>

</RelativeLayout>