<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical"
  android:paddingLeft="@dimen/list_item_horizontal_margin"
  android:paddingRight="@dimen/list_item_horizontal_margin"
  android:paddingTop="@dimen/report_list_cell_padding_top"
  android:paddingBottom="@dimen/report_list_cell_padding_bottom"
  android:background="@drawable/subheader_gradient_background"
>
	<LinearLayout
  		android:layout_width="fill_parent"
  		android:layout_height="fill_parent"
  		android:orientation="horizontal"
  	>
    	<LinearLayout
    		android:layout_height="wrap_content"
    		android:orientation="vertical"
    		android:layout_width="fill_parent"
    		android:layout_gravity="top"
    		android:layout_weight="1.0"
    	>
        	<TextView
        		android:id="@+id/report_name"
        		android:layout_width="fill_parent"
        		android:layout_height="wrap_content"
        		android:textAppearance="@style/ListCellHeaderText"
        		android:layout_gravity="top|left"
        		android:gravity="top|left"
    			android:lines="1"
	    		android:scrollHorizontally="true"
	    		android:ellipsize="end"
        	/>
        	<LinearLayout
        		android:layout_width="fill_parent"
        		android:layout_height="wrap_content"
        		android:orientation="horizontal"
        		android:layout_marginTop="@dimen/report_list_cell_secondary_text_top_margin"
        	>
	    		<TextView
	    			android:id="@+id/report_date"
	    			android:layout_width="wrap_content"
	    			android:layout_height="wrap_content"
	    			android:textAppearance="@style/SubHeaderText"
	    			android:layout_gravity="top|left"
	    			android:gravity="top|left"
	    			android:lines="1"
	    			android:scrollHorizontally="true"
	    			android:ellipsize="end"
	    			
	    		/>
        		<TextView
        			android:id="@+id/report_status"
        			android:layout_width="wrap_content"
        			android:layout_height="wrap_content"
        			android:textAppearance="@style/SubHeaderText"
        			android:layout_gravity="top|left"
        			android:gravity="top|left"
        			android:lines="1"
	    			android:scrollHorizontally="true"
	    			android:ellipsize="end"
        		/>
        	</LinearLayout>
            <TextView
  				android:id="@+id/approver_name"
  				android:layout_width="wrap_content"
  				android:layout_height="wrap_content"
  				android:layout_marginTop="@dimen/report_list_cell_secondary_text_top_margin"
  				android:lines="1"
	    		android:scrollHorizontally="true"
	    		android:ellipsize="end"
  				android:textAppearance="@style/SubHeaderText"
  			/>
    	</LinearLayout>
    	<LinearLayout
    		android:layout_height="fill_parent"
    		android:orientation="vertical"
    		android:layout_width="wrap_content"
    		android:layout_marginLeft="@dimen/list_cell_icon_margin_right"
    	>
    		<TextView
    			android:id="@+id/report_amount"
    			android:layout_height="wrap_content"
    			android:textAppearance="@style/ListCellHeaderText"
    			android:layout_gravity="right|top"
    			android:layout_width="wrap_content"
    			android:lines="1"
	    		android:scrollHorizontally="true"
	    		android:ellipsize="end"
    		/>
    		<LinearLayout
    			android:layout_width="wrap_content"
    			android:layout_height="0dp"
    			android:orientation="horizontal"
    			android:layout_weight="1.0"
    			android:layout_gravity="right|top"
    			android:layout_marginTop="@dimen/report_list_cell_secondary_text_top_margin"
    		>
    			<ImageView
    				android:id="@+id/report_receipt_icon"
    				android:src="@drawable/icon_receipt"
    				android:layout_width="wrap_content"
    				android:layout_height="wrap_content"
    				android:layout_gravity="right|top"
    				android:layout_marginTop="@dimen/list_cell_sub_header_icon_top_margin"
    			/>
    			<ImageView
    				android:id="@+id/report_exception_icon"
    				android:src="@drawable/icon_yellowex"
    				android:layout_width="wrap_content"
    				android:layout_height="wrap_content"
    				android:layout_marginLeft="@dimen/list_cell_icon_margin_right"
    				android:layout_gravity="right|top"
    				android:layout_marginTop="@dimen/list_cell_sub_header_icon_top_margin"
    			/>
    			<ImageView
    				android:id="@+id/report_readytosubmit"
    				android:src="@drawable/icon_ready_submit"
    				android:layout_width="wrap_content"
    				android:layout_height="wrap_content"
    				android:layout_marginLeft="@dimen/list_cell_icon_margin_right"
    				android:layout_gravity="right|top"
    				android:layout_marginTop="@dimen/list_cell_sub_header_icon_top_margin"
    				android:visibility="gone"
    			/>
    		</LinearLayout>
    	</LinearLayout>
	</LinearLayout>
</LinearLayout>

