<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ConcurTheme"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/gradient_background" >

    <!-- Include the standard header bits -->
    <include android:id="@+id/header" layout="@layout/standard_header" />

    <include
        android:id="@+id/trip_approver_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        layout="@layout/trip_approval_row" />

    <ListView
        android:id="@+id/trip_rule_violations_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/trip_approver_header"
        android:background="@drawable/gradient_background"
        android:divider="@color/ListDivider"/>
</RelativeLayout>