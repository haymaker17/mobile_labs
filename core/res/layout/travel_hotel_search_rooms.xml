<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/hotel_room_view"
    style="@style/ConcurTheme"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/gradient_background"
    android:orientation="vertical" >

    <!-- Include the standard header bits -->

    <include layout="@layout/standard_header" />

    <!-- Include the hotel header view. -->

    <include
        android:id="@+id/hotel_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/travel_hotel_header" />

    <include
        android:id="@+id/travel_points_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/travel_header"
        layout="@layout/travel_points_header_in_segment_search"
        android:visibility="gone" />

    <ListView
        android:id="@+id/hotel_search_result_rooms_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="@color/White" />

    <include
        android:id="@+id/footer"
        layout="@layout/footer_navigation_bar_text_view" />

</LinearLayout>