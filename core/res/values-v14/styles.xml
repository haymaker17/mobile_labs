<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--
        Base application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.


    -->
    <!--
    	== Unused.
    	== Until we have a v14+ specific style need, put it all in v11.
    	 
    <style name="ConcurBaseTheme" parent="Theme.Sherlock.Light.DarkActionBar">
        <!- API 14+ theme customizations can go here. ->
    </style>

    <style name="ConcurBaseTheme.NoActionBar" parent="Theme.Sherlock.Light.NoActionBar">
        <!- API 14+ theme customizations can go here. ->
    </style>

    -->


    <!-- White ActionBar with ActionBar tabs with blue text/bar -->

    <style name="ConcurBaseTheme.White.ActionBarTabs" parent="Theme.AppCompat.Light">
        <item name="android:actionOverflowButtonStyle">@style/ActionBarOverflowButton.Blue</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.White</item>
        <item name="android:actionBarTabTextStyle">@style/ActionBarTabTextStyle.Blue</item>
        <item name="android:actionBarStyle">@style/Concur.ActionBar.Tabs</item>
        <item name="android:actionMenuTextColor">@color/universal_tour_ab_menu</item>
        <item name="android:homeAsUpIndicator">@drawable/icon_drawer</item>
        <item name="android:popupMenuStyle">@style/ActionBarOverflowPopupWindow</item>
    </style>

    <style name="Concur.ActionBar.Tabs" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="android:background">@drawable/ab_tab_white_bg</item>
        <item name="android:backgroundStacked">@drawable/ab_tab_white_stacked_bg</item>
        <item name="android:backgroundSplit">@drawable/ab_tab_white_split_bg</item>
        <item name="android:displayOptions">showTitle</item>
        <item name="android:titleTextStyle">@style/NewActionBarNewHeaderText</item>
        <item name="android:actionMenuTextColor">@color/universal_tour_ab_menu</item>
    </style>

    <style name="ActionBarTabStyle.White" parent="@style/Widget.AppCompat.ActionBar.TabView">
        <item name="android:background">@drawable/ab_tab_white_states</item>
    </style>

    <style name="ActionBarTabTextStyle.Blue" parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:textColor">@color/universal_tour_ab_menu</item>
    </style>

    <style name="ActionBarOverflowButton.Blue" parent="ActionBarOverflowButton">
        <item name="android:src">@drawable/action_bar_icon_overflow</item>
    </style>
    
    <style name="ActionBarOverflowPopupWindow" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/ab_overflow_background_white</item>
    </style>
    
    <!-- END White ActionBar with ActionBar tabs with blue text/bar -->

</resources>