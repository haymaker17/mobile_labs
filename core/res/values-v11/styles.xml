<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme for API 11+. This theme completely replaces
        AppBaseTheme from res/values/styles.xml on API 11+ devices.


    -->
    <style name="ConcurBaseTheme.New" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
		<item name="android:actionBarStyle">@style/Widget.Styled.ActionBar.New</item>
		<item name="android:actionMenuTextColor">@color/universal_tour_ab_menu</item>
		<item name="android:homeAsUpIndicator">@drawable/icon_drawer</item>
		<item name="android:actionOverflowButtonStyle">@style/ActionBarOverflowButton</item>
	</style>
	
    <style name="ConcurBaseTheme.White.New" parent="ConcurBaseTheme.New">
		<item name="android:actionOverflowButtonStyle">@style/ActionBarOverflowButton.White</item>
	</style>

    <!-- White ActionBar with ActionBar tabs with blue text/bar -->
    
    <style name="ConcurBaseTheme.White.ActionBarTabs" parent="Theme.AppCompat.Light">
        <item name="android:actionOverflowButtonStyle">@style/ActionBarOverflowButton.Blue</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.White</item>
        <item name="android:actionBarTabTextStyle">@style/ActionBarTabTextStyle.Blue</item>
		<item name="android:actionBarStyle">@style/Concur.ActionBar.Tabs</item>
		<item name="android:actionMenuTextColor">@color/universal_tour_ab_menu</item>
        <item name="android:homeAsUpIndicator">@drawable/icon_drawer</item>
        <item name="android:popupMenuStyle">@style/ActionBarOverflowPopupWindow</item>
    </style>

    <style name="Concur.ActionBar.Tabs" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="android:background">@drawable/ab_tab_white_bg</item>
        <item name="backgroundStacked">@drawable/ab_tab_white_stacked_bg</item>
        <item name="backgroundSplit">@drawable/ab_tab_white_split_bg</item>
        <item name="android:displayOptions">showTitle</item>
        <item name="android:titleTextStyle">@style/NewActionBarNewHeaderText</item>
        <item name="android:actionMenuTextColor">@color/universal_tour_ab_menu</item>
    </style>

    <style name="ActionBarTabStyle.White" parent="@style/Widget.AppCompat.ActionBar.TabView">
        <item name="android:background">@drawable/ab_tab_white_states</item>
    </style>

    <style name="ActionBarTabTextStyle.Blue" parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:textColor">@color/universal_tour_ab_menu</item>
    </style>

    <style name="ActionBarTabTextStyleV1.Blue" parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:textColor">@color/universal_tour_ab_menu_v1</item>
    </style>
    
    <style name="ActionBarOverflowButton.Blue" parent="ActionBarOverflowButton">
        <item name="android:src">@drawable/action_bar_icon_overflow</item>
    </style>
    
    <style name="ActionBarOverflowPopupWindow" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/ab_overflow_background_white</item>
    </style>
    
    <!-- END White ActionBar with ActionBar tabs with blue text/bar -->
	
    <style name="ConcurBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- API 11+ theme customizations can go here. -->
        <item name="android:actionBarStyle">@style/Widget.Styled.ActionBar</item>
        <item name="android:homeAsUpIndicator">@drawable/icon_drawer</item>
        <item name="android:actionOverflowButtonStyle">@style/ActionBarOverflowButton</item>
    </style>

    <style name="ConcurBaseTheme.NoActionBar">
        <!-- API 11+ theme customizations can go here. -->
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    
    <style name="ConcurBaseTheme.Translucent">
        <item name="android:windowIsTranslucent">true</item> 
    </style>
    
    <style name="ConcurBaseTheme.Translucent.NoActionBar">
        <!-- API 11+ theme customizations can go here. -->
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        
    </style>

    <style name="Widget.Styled.ActionBar.New" parent="Widget.AppCompat.ActionBar">

        <!-- Make sure to keep this in sync with the base, non-api-specific style -->
        <item name="android:background">@drawable/gradient_title_white_bar</item>
        <item name="android:displayOptions">showTitle</item>
        <item name="android:titleTextStyle">@style/NewActionBarNewHeaderText</item>
        <item name="android:actionMenuTextColor">@color/universal_tour_ab_menu</item>
    </style>
    
    <style name="Widget.Styled.ActionBar" parent="Widget.AppCompat.ActionBar">

        <!-- Make sure to keep this in sync with the base, non-api-specific style -->
        <item name="android:background">@drawable/gradient_title_bar</item>
        <item name="android:displayOptions">showTitle</item>
        <item name="android:titleTextStyle">@style/NewHeaderText</item>
    </style>

    <!-- Text styles -->
    <style name="CustomDialogBase"></style>
    
    <style name="HomeRowHeader" parent="PrimaryText">
        <item name="android:textSize">20sp</item>
    </style>

    <!-- MOB-14596 - work around to fix in 2.x devices  -->
    <style name="ConcurTheme.Sherlock.Dialog.Light" parent="android:Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>
    
</resources>