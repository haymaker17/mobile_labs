<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle">
            <solid android:color="#0078c8" />

            <corners android:radius="0dp" />
        </shape></item>
    <item android:state_checked="true"><shape android:shape="rectangle">
            <solid android:color="#0078c8" />

            <corners android:radius="0dp" />
        </shape></item>
    <item><shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <solid android:color="@color/White" />

            <stroke android:width="1dp" android:color="#c1cbd2" />

            <corners android:radius="0dp" />
        </shape></item>

</selector>