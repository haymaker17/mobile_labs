    <style name="FormFieldLabelTexHeaderV1" parent="PrimaryText">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/White</item>
    </style>

    <style name="RestActionBarNewHeaderTextV1" parent="PrimaryText">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif-light/</item>
        <item name="android:textColor">#0078c8</item>
    </style>

    <style name="Concur.ActionBar.Tabs" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="android:background">@drawable/ab_tab_white_bg</item>
        <item name="backgroundStacked">@drawable/ab_tab_white_stacked_bg</item>
        <item name="backgroundSplit">@drawable/ab_tab_white_split_bg</item>
        <item name="android:displayOptions">showTitle</item>
        <item name="android:titleTextStyle">@style/NewActionBarNewHeaderText</item>
        <item name="android:actionMenuTextColor">@color/universal_tour_ab_menu</item>
    </style>

    <!-- Rest API White ActionBar with ActionBar tabs with blue text/bar -->
    <style name="ConcurRestTheme.White.ActionBarTabs" parent="Theme.AppCompat.Light">
        <item name="actionBarStyle">@style/Concur.ActionBar.Tabs</item>
        <item name="actionMenuTextColor">@color/universal_tour_ab_menu</item>
        <item name="actionOverflowButtonStyle">@style/ActionBarOverflowButton</item>
        <item name="android:titleTextStyle">@style/RestActionBarNewHeaderTextV1</item>
        <item name="android:displayOptions">showHome|homeAsUp|showTitle</item>
        <item name="android:icon">@android:color/transparent</item>
    </style>

    <style name="HotelFilterButtonTextStyle">
        <item name="android:textColor">@drawable/hotel_filter_button_text_custom</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="VoiceTextboxPrimary" parent="PrimaryText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#FFFFFF</item>
