<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/hotel_detail"
    style="@style/ConcurRestTheme.White.ActionBarTabs"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!--
          <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
    -->

    <com.concur.mobile.platform.ui.travel.hotel.fragment.SquareImageView
        android:id="@+id/travelCityscape"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:scaleType="fitXY" >

        <View
            android:id="@+id/viewSpacer"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <include
            android:id="@+id/hotel_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/travelCityscape"
            layout="@layout/hotel_search_result_row" />

        <TabHost
            android:id="@android:id/tabhost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/hotel_row" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TabWidget
                    android:id="@android:id/tabs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fitsSystemWindows="true"
                    android:gravity="fill"
                    android:showDividers="middle" >
                </TabWidget>

                <include
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    layout="@layout/group_separator_v1" />

                <FrameLayout
                    android:id="@android:id/tabcontent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <FrameLayout
                        android:id="@+id/tab_details"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <FrameLayout
                        android:id="@+id/tab_rooms"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <FrameLayout
                        android:id="@+id/tab_images"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </FrameLayout>
            </LinearLayout>
        </TabHost>
        <!--
    </RelativeLayout>
    </ScrollView>
    android:src="@drawable/cityscape_placeholder"
        -->

    </com.concur.mobile.platform.ui.travel.hotel.fragment.SquareImageView>

</RelativeLayout>