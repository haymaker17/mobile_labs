<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              style="@style/ConcurBaseTheme.White.New"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#FFFFFF"
              android:orientation="horizontal"
              android:paddingBottom="10dp"
              android:paddingLeft="10dp"
              android:paddingRight="@dimen/search_result_cell_padding_right"
              android:paddingTop="@dimen/search_result_cell_padding_top">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/list_cell_padding_left"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/hotel_image_id"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/hotel_results_default_image"/>

        <TextView
            android:id="@+id/hotel_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:fontFamily="sans-serif-medium"
            android:textAppearance="@style/HotelPriceTextStyle"/>

        <TextView
            android:id="@+id/hotel_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="6dp"
            android:layout_toLeftOf="@id/hotel_price"
            android:layout_toRightOf="@id/hotel_image_id"
            android:fontFamily="sans-serif"
            android:textColor="#383f46"
            android:textSize="16sp"
            android:maxLines="1"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/hotel_address"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/hotel_name"
            android:layout_marginBottom="4dp"
            android:layout_toRightOf="@id/hotel_image_id"
            android:textAppearance="@style/HotelCityTextStyle"/>

        <TextView
            android:id="@+id/hotel_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/hotel_address"
            android:layout_marginBottom="4dp"
            android:layout_toRightOf="@id/hotel_image_id"
            android:drawableLeft="@drawable/icon_cell_locator"
            android:drawablePadding="@dimen/standard_button_padding"
            android:fontFamily="sans-serif"
            android:textColor="#383f46"
            android:textSize="12sp"/>

        <RelativeLayout
            android:id="@+id/recom_pref_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_below="@id/hotel_image_id">

            <TextView
                android:id="@+id/travel_points_text"
                android:layout_width="86dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="6dp"/>

            <ImageView
                android:id="@+id/recom_stars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:layout_toRightOf="@id/travel_points_text"
                android:src="@drawable/icon_cell_stars_5"/>


            <TextView
                android:id="@+id/preference_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:padding="4dp"
                android:textSize="12sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/recom_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/recom_pref_view"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@id/hotel_image_id"
            android:fontFamily="sans-serif-light"
            android:textColor="#0078c8"
            android:textSize="12sp"/>
    </RelativeLayout>

</LinearLayout>