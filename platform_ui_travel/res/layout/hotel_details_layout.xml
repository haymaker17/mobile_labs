<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/details"
        android:gravity="center"
        android:orientation="vertical"
        android:minHeight="300dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true">

        <FrameLayout
            android:id="@+id/map_view"
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:layout_marginTop="12dp"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_gravity="left"
            android:layout_margin="24dp">

            <ImageView
                android:id="@+id/hotel_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_hotel_grey"
                android:paddingTop="5dp"
                android:paddingRight="24dp"
                />

            <TextView
                android:id="@+id/hotel_name"
                android:layout_toRightOf="@id/hotel_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="Hyatt Regency"
                android:textColor="#383f46"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/hotel_address"
                android:layout_toRightOf="@id/hotel_icon"
                android:layout_below="@id/hotel_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:fontFamily="sans-serif"
                android:text="501 Pine St, Seattle,erwerwerwerwerwer WA, 98212"
                android:textColor="#7f8f97"
                android:textSize="16sp"/>
        </RelativeLayout>

        <include
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/address"
            layout="@layout/group_separator_v1"/>

        <TextView
            android:id="@+id/hotel_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_margin="24dp"
            android:drawableLeft="@drawable/room_icon_phone_blue"
            android:drawablePadding="24dp"
            android:fontFamily="sans-serif"
            android:text="(203) 8547852"
            android:textColor="@color/ConcurBlue"
            android:textSize="16sp"/>

        <include
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/separator"
            android:layout_below="@+id/phone"
            layout="@layout/group_separator_v1"/>

        <Button
            android:id="@+id/footer_button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/separator"
            android:layout_marginTop="50dp"
            android:background="@color/ConcurBlue"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:text="@string/find_rooms_button"
            android:textColor="@color/White"
            android:textSize="20sp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>


    </LinearLayout>

</RelativeLayout>