<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical" >

            <!--
                <fragment
                android:id="@+id/map_view"
                android:name="com.google.android.gms.maps.MapFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 layout="@layout/map_layout"
                android:layout_marginTop="12dp" />
                
            <FrameLayout
                android:id="@+id/map_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:clickable="true" >
            </FrameLayout>
            -->

            <ImageView
                android:id="@+id/map_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:clickable="true" />

            <TextView
                android:id="@+id/hotel_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="24dp"
                android:drawableLeft="@drawable/room_icon_address"
                android:drawablePadding="24dp"
                android:fontFamily="sans-serif"
                android:text="501 Pine St, Seattle,erwerwerwerwerwer WA, 98212"
                android:textColor="#383f46"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/hotel_address_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="63dp"
                android:fontFamily="sans-serif"
                android:text="Address"
                android:textColor="#737373"
                android:textSize="12sp" />

            <include
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/address"
                layout="@layout/group_separator_v1" />

            <TextView
                android:id="@+id/hotel_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_margin="24dp"
                android:drawableLeft="@drawable/room_icon_phone"
                android:drawablePadding="24dp"
                android:fontFamily="sans-serif"
                android:text="(203) 8547852"
                android:textColor="#383f46"
                android:textSize="16sp" />

            <include
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/phone"
                layout="@layout/group_separator_v1" />
        </LinearLayout>
    </ScrollView>

    <include
        android:id="@+id/footer"
        layout="@layout/footer_navigation_button_full" />

</LinearLayout>