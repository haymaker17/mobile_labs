<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_background"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:paddingLeft="20dp"
        android:paddingRight="@dimen/list_cell_padding_right"
        android:paddingTop="16dp" >

        <TextView
            android:id="@+id/hotel_room_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="Queen bed"
            android:textColor="#383f46"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/hotel_room_deposit_required"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:textColor="#383f46"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/hotel_room_gds_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:textColor="#687278"
            android:textSize="16sp"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <!--
             <ImageView
            android:id="@+id/violation_icon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="top|right"
            android:src="@drawable/ic_action_voilation"
            android:visibility="invisible" />
        -->

        <TextView
            android:id="@+id/hotel_room_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:fontFamily="sans-serif-medium"
            android:paddingLeft="5dp"
            android:paddingRight="@dimen/list_cell_padding_right"
            android:paddingTop="16dp"
            android:text="$0.00"
            android:textColor="#0078c8"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/hotel_room_rate_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:fontFamily="sans-serif-medium"
            android:paddingLeft="5dp"
            android:paddingRight="@dimen/list_cell_padding_right"
            android:text="per night"
            android:textColor="#687278"
            android:textSize="12sp" />

        <!--
             <TextView
            android:id="@+id/hotel_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:fontFamily="sans-serif-medium"
            android:text="$169"
            android:textColor="#0078c8"
            android:textSize="18sp" />
        -->
    </LinearLayout>

</LinearLayout>