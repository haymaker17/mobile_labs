<?xml version="1.0" encoding="utf-8"?>
<!--     This layout file provides a two-element editable text form field. -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gradient_background"
    android:orientation="vertical"
    android:paddingBottom="@dimen/form_cell_padding_bottom"
    android:paddingTop="@dimen/form_cell_padding_top" >

    <TextView
        android:id="@+id/field_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:text="Field Name"
        android:textAppearance="@style/FormFieldLabelText" />

    <EditText
        android:id="@+id/field_value"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:maxLines="1"
        android:minLines="1"
        android:singleLine="true"
        android:text="Field Value"
        android:textAppearance="@style/FormFieldValueText" />

    <TextView
        android:id="@+id/field_note"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:text="Field Note"
        android:textAppearance="@style/FormFieldNoteText"
        android:visibility="gone" />

</LinearLayout>