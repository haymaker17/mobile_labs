<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
                style="@style/DefaultRow">

    <View
        android:id="@+id/v_divider_top"
        android:layout_width="wrap_content"
        android:layout_height="9dp"
        android:visibility="gone"
        style="@style/DefaultDivider" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Large Text"
        android:textAppearance="@style/DefaultTitle"
        android:layout_below="@+id/v_divider_top"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tv_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Large Text"
        android:textAppearance="@style/DefaultValue"
        android:layout_below="@+id/v_divider_top"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/tv_subtitle_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_title"
        android:text="Small Text"
        android:textAppearance="@style/DefaultSubTitle" />

    <TextView
        android:id="@+id/tv_subtitle_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_subtitle_1"
        android:text="Small Text"
        android:textAppearance="@style/DefaultSubTitle" />

    <View
        android:id="@+id/v_divider_bottom"
        android:layout_width="wrap_content"
        android:layout_height="9dp"
        android:layout_below="@+id/tv_subtitle_2"
        android:visibility="gone"
        style="@style/DefaultDivider" />

</RelativeLayout>
