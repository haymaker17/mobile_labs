<?xml version="1.0" encoding="utf-8"?>
<!-- 
	This selector can be used as a background resource on a view object contained
	in a ListView.
 -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="false" android:state_pressed="true"
        android:drawable="@drawable/list_selector_white_background_transition" />
    <item android:state_selected="true" android:state_pressed="true"
        android:drawable="@drawable/list_selector_white_background_transition" />

    <item android:state_selected="true"
        android:drawable="@drawable/list_selector_background_focus"/>
        
    <!--  Focus handling -->
    <item android:state_focused="true" android:state_pressed="true"
        android:drawable="@drawable/list_selector_white_background_transition" />
    <item android:state_focused="false" android:state_pressed="true"
        android:drawable="@drawable/list_selector_white_background_transition" />
    <item android:state_focused="true"
        android:drawable="@drawable/list_selector_background_focus" />
        
    <!--  Non-selected, non-pressed -->
    <item
    	android:state_selected="false"
    	android:state_pressed="false"
    	android:drawable="@drawable/cell_gradient_background"
    />
</selector>
