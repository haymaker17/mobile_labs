<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:paddingLeft="@dimen/list_cell_padding_left"
	android:paddingRight="@dimen/list_cell_padding_right"
	android:paddingTop="@dimen/list_cell_padding_top"
	android:paddingBottom="@dimen/list_cell_padding_bottom"
	android:background="@drawable/list_selector_gradient_background"
>
	<ImageView
		android:id="@+id/airlineLogo"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:layout_alignParentTop="true"
		android:layout_alignParentLeft="true"
		android:src="@drawable/dl" 
		android:layout_marginTop="@dimen/airline_logo_icon_top_margin"
	/>
	<TextView
		android:id="@+id/airlineName"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@id/airlineLogo"
		android:textAppearance="@style/ListCellHeaderText"
		android:text="Delta"
		android:layout_marginLeft="4dp"
		android:layout_alignParentTop="true"
	/>
	<!--  This layout is dynamically filled with data from air booking segment objects. -->
	<LinearLayout
		android:id="@+id/segment_list"
		android:orientation="vertical"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_below="@id/airlineName"
	/>
	<TextView
		android:id="@+id/fare_cost"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_alignParentTop="true"
		android:textAppearance="@style/AirFareNormal"
	/>
	<ImageView
		android:id="@+id/refundable"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/fare_cost"
		android:layout_alignRight="@id/fare_cost"
		android:src="@drawable/refundable_air"
		android:layout_marginTop="2dp"
		android:layout_gravity="right"
		android:visibility="visible"
	/>	
	<ImageView
		android:id="@+id/rateType"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/refundable"
		android:layout_alignRight="@id/fare_cost"
		android:src="@drawable/rate_three_star"
		android:layout_marginTop="2dp"
		android:layout_gravity="right"
		android:visibility="gone"
	/>
	<ImageView
		android:id="@+id/violation_icon"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/rateType"
		android:layout_alignRight="@id/fare_cost"
		android:src="@drawable/icon_redex"
		android:layout_marginTop="2dp"
		android:layout_gravity="right"
		android:visibility="gone"
	/>
</RelativeLayout>

