<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical"
>
	<TextView
		android:id="@+id/air_book_required_field_header"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="@string/dlg_book_missing_fields_message"
		android:textAppearance="@style/CustomDialogMessageText"
		android:layout_gravity="center"
		android:layout_marginRight="6dp"
		android:layout_marginLeft="10dp"
	/>
	<ScrollView
		android:id="@+id/air_book_scroll_view"
		android:layout_width="fill_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:layout_marginLeft="6dp"
	>
		<TableLayout
			android:id="@+id/field_list_table"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:stretchColumns="0"
			android:shrinkColumns="0"
			android:layout_marginRight="6dp"
			android:layout_marginLeft="6dp"
		/>
	</ScrollView>
</LinearLayout>

