<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/gradient_background"
    android:orientation="vertical" >

    <!-- Include the expense header navigation bar. -->

    <include
        android:id="@+id/header"
        layout="@layout/standard_header" />

    <ListView
        android:id="@+id/expense_list_view"
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="1.0"
        android:alwaysDrawnWithCache="false"
        android:background="@color/WhiteBackground"
        android:cacheColorHint="#00000000"
        android:divider="@color/ListDivider"
        android:dividerHeight="2dp"
        android:footerDividersEnabled="true"
        android:headerDividersEnabled="false"
        android:visibility="visible" />

    <RelativeLayout
        android:id="@+id/expense_no_list_view"
        style="@style/ConcurTheme"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/gradient_background"
        android:visibility="gone" >

        <TextView
            android:id="@+id/expense_no_item_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center_horizontal"
            android:text="@string/gov_home_unapplied_expense_nodata"
            android:textAppearance="@style/PrimaryText" />
    </RelativeLayout>
     <include
        android:id="@+id/footer"
        layout="@layout/gov_expense_footer" />

</LinearLayout>