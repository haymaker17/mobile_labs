<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/gradient_background"
    android:orientation="vertical" >

    <!-- Include the expense header navigation bar. -->

    <include
        android:id="@+id/header"
        layout="@layout/standard_header" />

    <ListView
        android:id="@+id/document_list_view"
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="1.0"
        android:alwaysDrawnWithCache="false"
        android:background="@color/WhiteBackground"
        android:cacheColorHint="#00000000"
        android:divider="@color/ListDivider"
        android:dividerHeight="2dp"
        android:footerDividersEnabled="true"
        android:headerDividersEnabled="false"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/document_no_list_view"
        style="@style/ConcurTheme"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/gradient_background"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/document_addIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_menu_invite" >
        </ImageView>

        <TextView
            android:id="@+id/document_no_item_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/document_addIcon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:text="failure message"
            android:textAppearance="@style/PrimaryText" >
        </TextView>

        <Button
            android:id="@+id/document_create"
            style="@style/StandardButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/document_no_item_message"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:text="create" >
        </Button>
    </RelativeLayout>

</LinearLayout>